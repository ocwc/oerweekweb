{{#app-canvas}}
<header>
  <div class="row">
    <div class="medium-2 columns">
      {{#link-to "index"}}<img src="assets/images/logo.svg" />{{/link-to}}
    </div>
    <div class="medium-9 columns">
      <ul class="dropdown menu" data-dropdown-menu data-options="clickOpen: true;">
        <li>
          <a href="#">About</a>
          <ul class="menu">
            <li>{{#link-to "page" "what-is-open-education"}}What is Open Education{{/link-to}}</li>
            <li>{{#link-to "page" "what-is-open-education-week"}}What is Open Education Week{{/link-to}}</li>
            <li>{{#link-to "open-education-initiatives"}}Open Education initiatives{{/link-to}}</li>
          </ul>
        </li>
        <li>
          <a href="#">Call for Participation</a>
          <ul class="menu">
            <li>{{#link-to "page" "call-for-participation"}}Call for Participation{{/link-to}}</li>
            <li>{{#link-to 'submit'}}Submit your Event{{/link-to}}</li>
            <li>{{#link-to "page" "faq"}}FAQ{{/link-to}}</li>
          </ul>
        </li>
        <li>{{#link-to 'resources'}}Projects &amp; Resources{{/link-to}}</li>
        <li>
          <a href="#">Events</a>
          <ul class="menu">
            <li>{{#link-to 'schedule.local'}}Local Events{{/link-to}}</li>
            <li>{{#link-to 'schedule.online'}}Online Events{{/link-to}}</li>
            <li>{{#link-to 'events'}}Browse All{{/link-to}}</li>
          </ul>
        </li>
        <li>
          <a href="#">Picture Yourself Open</a>
          <ul class="menu">
            <li>{{#link-to "picture-yourself-open"}}Map of Pictures{{/link-to}}</li>
            <li>{{#link-to "picture-yourself-open.submit"}}Submit your own{{/link-to}}</li>
          </ul>
        </li>
      </ul>
    </div>
    <div class="medium-1 columns">
      {{#link-to 'submit' class="button cyan header--submit"}}Submit{{/link-to}}
    </div>
  </div>
</header>
{{/app-canvas}}
