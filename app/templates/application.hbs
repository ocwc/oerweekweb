<header>
  <div class="row">
    <div class="small-2 columns">
      <img src="assets/images/logo.svg" />
    </div>
    <div class="small-8 columns">
      <ul class="menu">
        <li><a href="#">About</a></li>
        <li><a href="#">Call for Participation</a></li>
        <li><a href="#">Projects &amp; Resources</a></li>
        <li><a href="#">Global Events</a></li>
        <li><a href="#">Open Photo</a></li>
      </ul>
    </div>
    <div class="small-2 columns">
      <a href="#" class="button cyan header--submit">Submit</a>
    </div>
  </div>
</header>

<div class="row">
  {{#if session.isAuthenticated}}
    <button {{action 'logout'}}>Logout</button>
  {{else}}
    {{#link-to "login"}}Login{{/link-to}}
  {{/if}}

  {{#link-to "openphotos"}}Open Photos{{/link-to}}
  {{#link-to "styleguide"}}Style Guide{{/link-to}}
  {{outlet}}
</div>

