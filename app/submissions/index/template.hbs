<div class="row">
  <div class="small-12 columns text-center">
      <h1>Submissions</h1>
  </div>

  <table class="table table-bordered table-striped">
    <tr class="text-left">
      <th>ID</th>
      <th>Title</th>
      <th>Status</th>
    </tr>
    {{#each model as |submission|}}
      <tr>
        <td>{{submission.id}}</td>
        <td>{{#link-to 'submissions.detail' submission.id}}{{submission.title}}{{/link-to}}</td>
        <td>{{submission.postStatus}}</td>
      </tr>
    {{/each}}
  </table>
</div>
