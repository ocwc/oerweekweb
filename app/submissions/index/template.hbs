<div class="row box">
  <div class="small-12 columns text-center">
    <h1>Submissions</h1>
  </div>

  <div class="small-12 columns">
    <ul class="breadcrumbs">
      <li>{{#link-to "submissions.index" (query-params postStatus="null")}}All{{/link-to}}</li>
      <li>{{#link-to "submissions.index" (query-params postStatus="draft")}}Draft{{/link-to}}</li>
      <li>{{#link-to "submissions.index" (query-params postStatus="publish")}}Published{{/link-to}}</li>
      <li>{{#link-to "submissions.index" (query-params postStatus="trash")}}Trash{{/link-to}}</li>
    </ul>
  </div>

  <table class="table table--submissions">
    <thead>
    <tr class="text-left">
      <th>ID</th>
      <th>Title</th>
      <th>Status</th>
    </tr>
    </thead>
    <tbody>
    {{#each filteredSubmissions as |submission|}}
      <tr>
        <td>{{submission.id}}</td>
        <td>{{#link-to 'submissions.detail' submission.id}}{{submission.title}}{{/link-to}}</td>
        <td>{{submission.postStatus}}</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>
